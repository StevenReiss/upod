<project name='upod.smarthome' default='all' >

     <path id='spr.classpath'>
	<pathelement location='/research/people/spr/upod/java' />
	<pathelement location='/research/people/spr/upod/javasrc' />
	<pathelement location='/research/ivy/java' />
	<fileset dir='/research/people/spr/upod/lib/' includes='nanohttpd.jar' />
	<fileset dir='/research/people/spr/upod/lib/' includes='json.jar' />
	<fileset dir='/research/people/spr/upod/lib/' includes='stringtemplate.jar' />
	<fileset dir='/research/people/spr/upod/lib/' includes='jsoup*.jar' />
	<fileset dir='/research/people/spr/upod/lib/google/lib' includes='gdata-base-1.0.jar' />
	<fileset dir='/research/people/spr/upod/lib/google/lib' includes='gdata-calendar-2.0.jar' />
	<fileset dir='/research/people/spr/upod/lib/google/lib' includes='gdata-client-1.0.jar' />
	<fileset dir='/research/people/spr/upod/lib/google/lib' includes='gdata-core-1.0.jar' />
	<fileset dir='/research/people/spr/upod/lib/google/deps' includes='*.jar' />
	<fileset dir='/research/s6/public/batik-1.7/' includes='batik.jar' />
     </path>

     <target name='compile'>
	<javac srcdir='.' destdir='/research/people/spr/upod/java' debug='on' deprecation='on' includeantruntime='false'>
	   <classpath refid='spr.classpath' />
	</javac>
     </target>

     <target name='all' depends='compile' />

     <target name='test' depends='compile'>
	<java classname='edu.brown.cs.upod.smarthome.SmartHOmeMain' fork='true' >
	   <classpath refid='spr.classpath' />
	</java>
     </target>

     <target name='run' depends='compile'>
	<java classname='edu.brown.cs.upod.smarthome.SmartHomeMain' fork='true' >
	   <classpath refid='spr.classpath' />
	</java>
     </target>

     <target name='create' depends='compile'>
	<delete file='/u/spr/.smartsign' quiet='true' />
	<java classname='edu.brown.cs.upod.smarthome.SmartHomeMain' fork='true' >
	   <classpath refid='spr.classpath' />
	   <arg value="create" />
	</java>
     </target>

</project>
